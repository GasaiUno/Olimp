//triangles  â„–167 ACMP.ru
#include "stdafx.h"
#include "iostream"

using namespace std;

int main()
{
	int slices;
	cin >> slices;
	int *arr1 = new int[slices]();
	int *arr2 = new int[slices]();
	int *arr3 = new int[slices]();
	if (slices == 1) {
		cout << "1";
	}
	else {
		int s = 2;
		for (int i = 0; i <= slices - 1; i += 2) {
			arr1[i] += s;
			arr1[i + 1] += s;
			s++;
		}
		arr2[0] = 2;
		for (int i = 1; i <= slices - 1; i++) {
			arr2[i] = arr2[i - 1] + arr1[i - 1];
		}
		arr3[0] = 1;
		for (int i = 1; i <= slices - 1; i++) {
			arr3[i] = arr3[i - 1] + arr2[i - 1];
		}
		/*for (int i = 0; i <= slices - 1; i++) {
			cout << arr3[i] << ' ';
		}
		*/
		//cout << endl;
		__int64 triangles = pow(slices, 2) - 3 * slices + 3;
		for (int i = 0; i <= slices - 1; i++)
			triangles += (slices - i)*(i + 1);
		//cout << triangles<<endl;
		if (slices>=5)
		triangles += arr3[slices - 6];
		cout << triangles;
	}
	cin.get();
	cin.get();
	return 0;
}
